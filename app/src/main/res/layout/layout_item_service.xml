                        android:layout_height="@dimen/dp_24"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_25"
                        android:src="@mipmap/video" />
                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="拨打亲情号"
                    android:textColor="@color/dark"
                    android:textSize="@dimen/sp_18" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_8"
                    android:text="语音及视频通话"
                    android:textColor="@color/sq_text_gray"
                    android:textSize="@dimen/sp_14" />


            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_28"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_session2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_155"
                android:background="@drawable/yuan_tag_white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dp_29"
                        android:layout_height="@dimen/dp_24"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:layout_marginTop="@dimen/dp_25"
                        android:src="@mipmap/pic3" />

                    <ImageView
                        android:layout_width="@dimen/dp_29"
                        android:layout_height="@dimen/dp_24"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_25"
